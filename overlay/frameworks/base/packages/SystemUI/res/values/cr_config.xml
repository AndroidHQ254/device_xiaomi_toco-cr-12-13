<resources>

    <!-- Default no. of QS tile rows and columns -->
    <integer name="config_qs_columns_portrait">4</integer>
    <integer name="config_qs_rows_portrait">2</integer>
    <integer name="config_qs_columns_landscape">5</integer>
    <integer name="config_qs_rows_landscape">1</integer>

    <!-- Allow devices override audio panel location to the left side -->
    <bool name="config_audioPanelOnLeftSide">false</bool>

    <!-- Whether to use the mask for the quicksettings icons-->
    <bool name="config_useMaskForQs">true</bool>

    <!-- Config to enable/disable qs tile tinting -->
    <bool name="config_enable_qs_tile_tinting">false</bool>

    <!-- Whether to disable assist hint on lockscreen -->
    <bool name="config_disableAssistHintOnLockscreen">false</bool>
</resources>
