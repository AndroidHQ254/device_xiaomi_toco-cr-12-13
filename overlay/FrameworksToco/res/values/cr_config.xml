<resources>

    <!-- Whether the device supports Smart Pixels -->
    <bool name="config_supportSmartPixels">true</bool>

    <!-- Whether to use old mobile type icons as default -->
    <bool name="config_useOldMobileIcons">true</bool>

    <!-- Whether doze feature is enabled by default in settings -->
    <bool name="config_doze_enabled_by_default">false</bool>

    <!-- Whether to show a custom view for FOD -->
    <bool name="config_needCustomFODView">true</bool>

    <!-- Default fod pressed color -->
    <integer name="config_fod_pressed_color">2</integer>

    <!-- NightLight FOD -->
    <bool name="disable_fod_night_light">false</bool>

    <!-- Default value for FOD animation package resources -->
    <string name="config_fodAnimationPackage" translatable="false">com.crdroid.fod.animations</string>

    <!-- Any package that has one of the package names defined below will be prevented
         from using specific sensors in order to stop battery drain -->
